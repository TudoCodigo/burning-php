{
    "type": "composer-plugin",
    "name": "tudocodigo/burning-php",
    "description": "A full featured PHP code analysis.",
    "version": "0.1.0",
    "license": "MIT",

    "keywords": [
        "analysis",
        "burning",
        "code-coverage",
        "coverage",
        "dead-code",
        "debug",
        "debugger",
        "performance",
        "profiling",
        "profile"
    ],

    "authors": [
        {
            "name": "David Rodrigues",
            "email": "david.rodrigues@rentalhost.net",
            "homepage": "https://rentalhost.net",
            "role": "Developer"
        }
    ],

    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "composer-plugin-api": "^1.1",
        "composer/composer": "^1.10",
        "composer/xdebug-handler": "^1.4",
        "symfony/filesystem": "^5.1",
        "symfony/finder": "^5.1",
        "symfony/polyfill-php80": "^1.18",
        "nikic/php-parser": "^4.10"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.3"
    },

    "autoload": {
        "psr-4": {
            "TudoCodigo\\BurningPHP\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "TudoCodigo\\BurningPHP\\Tests\\": "tests/"
        }
    },

    "extra": {
        "class": "TudoCodigo\\BurningPHP\\Composer\\ComposerPlugin"
    }
}
